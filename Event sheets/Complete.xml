<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Complete</name>
    <events>
        <include>GlobalEvents</include>
        <event-block>
            <conditions>
                <condition id="6" name="On object clicked" type="Mouse">
                    <param id="0" name="Mouse button">0</param>
                    <param id="1" name="Click type">0</param>
                    <param id="2" name="Object clicked">Quit</param>
                </condition>
            </conditions>
            <actions>
                <action id="-9" name="Set value" type="System">
                    <param id="0" name="Variable">SessionLevel</param>
                    <param id="1" name="Value">1</param>
                </action>
                <action id="0" name="Set local value" type="WebStorage">
                    <param id="0" name="Key">&quot;LevelCurrent&quot;</param>
                    <param id="1" name="Value">1</param>
                </action>
                <action id="-9" name="Set value" type="System">
                    <param id="0" name="Variable">SecurityDeposit</param>
                    <param id="1" name="Value">10000</param>
                </action>
                <action id="-2" name="Go to layout" type="System">
                    <param id="0" name="Layout">StartScreen</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="6" name="On object clicked" type="Mouse">
                    <param id="0" name="Mouse button">0</param>
                    <param id="1" name="Click type">0</param>
                    <param id="2" name="Object clicked">Next</param>
                </condition>
            </conditions>
            <actions>
                <action id="-10" name="Add to" type="System">
                    <param id="0" name="Variable">SessionLevel</param>
                    <param id="1" name="Value">1</param>
                </action>
                <action id="-10" name="Add to" type="System">
                    <param id="0" name="Variable">SecurityDeposit</param>
                    <param id="1" name="Value">1000</param>
                </action>
                <action id="-2" name="Go to layout" type="System">
                    <param id="0" name="Layout">MainLayout</param>
                </action>
                <action id="0" name="Set local value" type="WebStorage">
                    <param id="0" name="Key">&quot;LevelCurrent&quot;</param>
                    <param id="1" name="Value">SessionLevel</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="7" name="Cursor is over object" type="Mouse">
                    <param id="0" name="Object">Next</param>
                </condition>
            </conditions>
            <actions>
                <action id="5" name="Set frame" type="Next">
                    <param id="0" name="Frame number">1</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="7" name="Cursor is over object" type="Mouse">
                    <param id="0" name="Object">Quit</param>
                </condition>
            </conditions>
            <actions>
                <action id="5" name="Set frame" type="Quit">
                    <param id="0" name="Frame number">1</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="7" inverted="1" name="Cursor is over object" type="Mouse">
                    <param id="0" name="Object">Next</param>
                </condition>
            </conditions>
            <actions>
                <action id="5" name="Set frame" type="Next">
                    <param id="0" name="Frame number">0</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="7" inverted="1" name="Cursor is over object" type="Mouse">
                    <param id="0" name="Object">Quit</param>
                </condition>
            </conditions>
            <actions>
                <action id="5" name="Set frame" type="Quit">
                    <param id="0" name="Frame number">0</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-2" name="On start of layout" type="System" />
            </conditions>
            <actions>
                <action id="0" name="Set text" type="HighScore2">
                    <param id="0" name="Text">SessionHighScore</param>
                </action>
                <action id="0" name="Set text" type="YourScore">
                    <param id="0" name="Text">HighScore</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-3" name="On end of layout" type="System" />
            </conditions>
            <actions />
            <sub-events>
                <event-block any="1">
                    <conditions>
                        <condition id="-8" name="Compare two values" type="System">
                            <param id="0" name="First value">HighScore</param>
                            <param id="1" name="Comparison">4</param>
                            <param id="2" name="Second value">SecurityDeposit</param>
                        </condition>
                        <condition id="-8" name="Compare two values" type="System">
                            <param id="0" name="First value">SessionLevel</param>
                            <param id="1" name="Comparison">4</param>
                            <param id="2" name="Second value">HighestLevel</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Set value" type="System">
                            <param id="0" name="Variable">SecurityDeposit</param>
                            <param id="1" name="Value">WebStorage.LocalValue(&quot;HighScore&quot;)</param>
                        </action>
                        <action id="-9" name="Set value" type="System">
                            <param id="0" name="Variable">SessionLevel</param>
                            <param id="1" name="Value">WebStorage.LocalValue(&quot;HighestLevel&quot;)</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-block>
    </events>
</c2eventsheet>
